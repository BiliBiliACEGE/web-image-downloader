{
  "manifest_version": 3,
  "name": "网页图片下载器",
  "version": "1.0.0",
  "description": "智能识别并下载图片原图",
  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
  "web_accessible_resources": [{
  "resources": ["libs/jszip.min.js"],
  "matches": ["<all_urls>"]
  }]
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}